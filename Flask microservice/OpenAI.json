{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "OpenAI API",
    "description": "API for making predictions."
  },
  "paths": {
    "/recordatorioAutomatico": {
      "post": {
        "summary": "Recordatorio automatico",
        "description": "Endpoint to make a prediction.",
        "requestBody": {
          "description": "Data needed to make a prediction",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "input_data": {
                    "type": "string",
                    "description": "The input data for prediction."
                  }
                },
                "required": ["input_data"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful prediction",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "recordatorio": {
                      "type": "string",
                      "description": "The result of the prediction."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request. Data is missing or malformed."
          },
          "500": {
            "description": "Server error."
          }
        }
      }
    },
    "/recordatorioManual": {
      "post": {
        "summary": "Recordatorio manual",
        "description": "Endpoint para crear un recordatorio manual.",
        "requestBody": {
          "description": "Datos para recordatorio manual",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "input_data": {
                    "type": "string",
                    "description": "Datos de entrada para el recordatorio"
                  }
                },
                "required": ["input_data"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful recordatorio",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "recordatorio": {
                      "type": "string",
                      "description": "El resultado del recordatorio"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request. Data is missing or malformed."
          },
          "500": {
            "description": "Server error."
          }
        }
      }
    },
    "/tarjetas": {
      "post": {
        "summary": "Tarjetas disponibles",
        "description": "Endpoint para conocer las tarjetas disponibles",
        "requestBody": {
          "description": "Datos de las tarjetas",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "input_data": {
                    "type": "string",
                    "description": "Datos de entrada para el recordatorio"
                  }
                },
                "required": ["input_data"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful connection",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "tarjeta": {
                        "type": "string",
                        "description": "Description for tarjeta property"
                      },
                      "disponible": {
                        "type": "string",
                        "description": "Description for cantidad property"
                      },
                      "Numero": {
                        "type": "string",
                        "description": "Description for cantidad property"
                      }
                    },
                    "required": ["tarjeta", "cantidad"]
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request. Data is missing or malformed."
          },
          "500": {
            "description": "Server error."
          }
        }
      }
    },
    "/genera_grafica_categorias": {
      "post": {
        "summary": "Generar grafica de gastos mensuales",
        "description": "Endpoint para generar un grafica de gastos mensual",
        "requestBody": {
          "description": "Mes necesario para generar la grafica",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "mes": {
                    "type": "string",
                    "description": "Mes a elegir"
                  }
                },
                "required": ["input_data"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful prediction",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "The status of the http request"
                    },
                    "url": {
                      "type": "string",
                      "description": "The URL of the chart image"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request. Data is missing or malformed."
          },
          "500": {
            "description": "Server error."
          }
        }
      }
    },
    "/gasto_mensual_categoria": {
      "post": {
        "summary": "Revisar el gasto mensual en alguna categoria",
        "description": "Endpoint para conocer el gasto mensual de una categoria",
        "requestBody": {
          "description": "Datos para generar el gastos mensual",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "categoria": {
                    "type": "string",
                    "description": "Gategoria de gasto mensual"
                  },
                  "mes": {
                    "type": "string",
                    "description": "Mes a elegir"
                  }
                },
                "required": ["input_data"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful prediction",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "GastoMensual": {
                      "type": "string",
                      "description": "The status of the http request"
                    },
                    "Categoria": {
                      "type": "string",
                      "description": "The URL of the chart image"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request. Data is missing or malformed."
          },
          "500": {
            "description": "Server error."
          }
        }
      }
    },
    "/revisa_tarjeta": {
      "post": {
        "summary": "Revisar el limite de las tarjetas de credito o proponer renovar tarjetas",
        "description": "Endpoint para revisar las tarjetas de un usuario",
        "requestBody": {
          "description": "Datos para revisar las tarjetas de un usuario",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "_userId": {
                    "type": "string",
                    "description": "ID unico del usuario"
                  }
                },
                "required": ["_userId"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful prediction",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "The status of the http request"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request. Data is missing or malformed."
          },
          "500": {
            "description": "Server error."
          }
        }
      }
    },
    "/genera_usuario": {
      "post": {
        "summary": "Obtener un usuario aleatorio",
        "description": "Endpoint para obtener un usuario aleatorio",
        "requestBody": {
          "description": "none",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {}
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful prediction",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "userId": {
                      "type": "string",
                      "description": "user id"
                    },
                    "userName": {
                      "type": "string",
                      "description": "user name"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request. Data is missing or malformed."
          },
          "500": {
            "description": "Server error."
          }
        }
      }
    }
  },
